const difficultyColors: Record<string, { light: string; dark: string }> = {
  baja: {
    light: 'bg-green-100 text-green-800',
    dark: 'dark:bg-green-900/40 dark:text-green-300'
  },
  media: {
    light: 'bg-yellow-100 text-yellow-800',
    dark: 'dark:bg-yellow-900/40 dark:text-yellow-300'
  },
  alta: {
    light: 'bg-red-100 text-red-800',
    dark: 'dark:bg-red-900/40 dark:text-red-300'
  }
};

// Obtener configuración de color con valores por defecto
const getColorConfig = (color: string) => {
  return colorConfig[color] || colorConfig.gray;
};

const getDifficultyColor = (difficulty: string): string => {
  const config = difficultyColors[difficulty] || difficultyColors.media;
  return `${config.light} ${config.dark}`;
};

const capitalize = (str: string): string => {
  return str.charAt(0).toUpperCase() + str.slice(1);
};

const color = getColorConfig(mechanic.color);
---

<div class={`
  card border-2 ${color.border} ${color.borderDark} 
  ${color.bg} ${color.bgDark} 
  ${color.hoverBorder} ${color.hoverBorderDark} 
  group transition-all duration-300 hover:shadow-xl dark:hover:shadow-gray-900/50 
  hover:-translate-y-1 py-6 px-6 rounded-2xl backdrop-blur-sm overflow-hidden
`}>
  <!-- Encabezado con icono y título -->
  <div class="flex items-center justify-between">
    <div class="flex items-center gap-4">
      <!-- Icono con efecto de gradiente -->
      <div class={`
        relative w-14 h-14 rounded-xl flex items-center justify-center shadow-sm
        ${color.iconBg} ${color.iconBgDark}
        before:absolute before:inset-0 before:bg-gradient-to-br before:from-white/50 before:to-transparent 
        dark:before:from-white/10 before:rounded-xl
      `}>
        <span class={`text-2xl font-bold ${color.text} ${color.textDark} relative z-10`}>
          { mechanic.name.charAt(0)}
        </span>
      </div>
      
      <div>
        <div class="flex items-center gap-3 flex-wrap mb-1">
          <h3 class="text-xl font-bold text-gray-800 dark:text-gray-200 group-hover:text-gray-900 dark:group-hover:text-white">
            {mechanic.name}
          </h3>
          <span class={`inline-block px-3 py-1 rounded-full text-xs font-semibold ${getDifficultyColor(mechanic.difficulty)}`}>
            {capitalize(mechanic.difficulty)}
          </span>
        </div>
        <p class="text-gray-600 dark:text-gray-400 text-sm">
          {mechanic.description}
        </p>
      </div>
    </div>

    <!-- Botón de tres puntos para expandir -->
    <button 
      type="button"
      class="expand-btn ml-4 p-2 rounded-lg hover:bg-white/50 dark:hover:bg-gray-800/50 transition-colors"
      aria-label="Mostrar detalles"
      title="Mostrar detalles"
    >
      <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z" />
      </svg>
    </button>
  </div>
  
  <!-- Contenido expandible (oculto por defecto) -->
  <div class="expandable-content overflow-hidden max-h-0 transition-all duration-500 ease-in-out">
    <div class="pt-6 mt-6 border-t ${color.border} ${color.borderDark}">
      <!-- Detalles de mecánica y objetivo -->
      <div class="space-y-6">
        {mechanic.details?.mecanica && (
          <div>
            <div class="flex items-center gap-2 mb-3">
              <div class={`w-3 h-3 rounded-full ${color.text} ${color.textDark}`}></div>
              <span class="font-semibold text-gray-800 dark:text-gray-300 text-lg">
                Mecánica
              </span>
            </div>
            <p class="text-gray-600 dark:text-gray-400 pl-5 leading-relaxed">
              {mechanic.details.mecanica}
            </p>
          </div>
        )}
        
        {mechanic.details?.objetivo && (
          <div>
            <div class="flex items-center gap-2 mb-3">
              <div class={`w-3 h-3 rounded-full ${color.text} ${color.textDark}`}></div>
              <span class="font-semibold text-gray-800 dark:text-gray-300 text-lg">
                Objetivo
              </span>
            </div>
            <p class="text-gray-600 dark:text-gray-400 pl-5 leading-relaxed">
              {mechanic.details.objetivo}
            </p>
          </div>
        )}
        
        {mechanic.details?.rol && (
          <div>
            <div class="flex items-center gap-2 mb-3">
              <div class={`w-3 h-3 rounded-full ${color.text} ${color.textDark}`}></div>
              <span class="font-semibold text-gray-800 dark:text-gray-300 text-lg">
                Rol principal
              </span>
            </div>
            <p class="text-gray-600 dark:text-gray-400 pl-5 leading-relaxed">
              {mechanic.details.rol}
            </p>
          </div>
        )}
        
        {mechanic.details?.efecto && (
          <div>
            <div class="flex items-center gap-2 mb-3">
              <div class={`w-3 h-3 rounded-full ${color.text} ${color.textDark}`}></div>
              <span class="font-semibold text-gray-800 dark:text-gray-300 text-lg">
                Efecto en el juego
              </span>
            </div>
            <p class="text-gray-600 dark:text-gray-400 pl-5 leading-relaxed">
              {mechanic.details.efecto}
            </p>
          </div>
        )}
      </div>
      
      <!-- Botón para cerrar -->
      <div class="mt-8 text-center">
        <button 
          type="button"
          class="close-btn inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors"
          aria-label="Ocultar detalles"
        >
