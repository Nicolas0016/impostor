            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7" />
          </svg>
          Ocultar detalles
        </button>
      </div>
    </div>
  </div>
</div>

<style>
  /* Estilos base */
  .card {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    transform: translateY(0);
  }
  
  .card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 40px -15px rgba(0, 0, 0, 0.1);
  }
  
  .dark .card:hover {
    box-shadow: 0 20px 40px -15px rgba(0, 0, 0, 0.3);
  }
  
  /* Estado expandido */
  .card.expanded {
    padding-bottom: 2rem;
  }
  
  .card.expanded .expandable-content {
    max-height: 1000px;
  }
  
  /* Rotación del botón cuando está expandido */
  .card.expanded .expand-btn svg {
    transform: rotate(90deg);
  }
  
  .expand-btn svg {
    transition: transform 0.3s ease;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const cards = document.querySelectorAll('.card');
    
    cards.forEach(card => {
      const expandBtn = card.querySelector('.expand-btn');
      const closeBtn = card.querySelector('.close-btn');
      const expandableContent = card.querySelector('.expandable-content');
      
      if (expandBtn && expandableContent) {
        // Expandir al hacer clic en el botón de tres puntos
        expandBtn.addEventListener('click', () => {
          card.classList.add('expanded');
          expandableContent.style.maxHeight = expandableContent.scrollHeight + 'px';
        });
        
        // Cerrar al hacer clic en el botón de cerrar
        if (closeBtn) {
          closeBtn.addEventListener('click', () => {
            card.classList.remove('expanded');
            expandableContent.style.maxHeight = '0';
          });
        }
        
        // Cerrar al hacer clic fuera del contenido expandido
        document.addEventListener('click', (e) => {
          if (card.classList.contains('expanded') && 
              !card.contains(e.target) && 
              e.target !== expandBtn) {
            card.classList.remove('expanded');
            expandableContent.style.maxHeight = '0';
          }
        });
        
        // Manejar tecla Escape para cerrar
        document.addEventListener('keydown', (e) => {
          if (e.key === 'Escape' && card.classList.contains('expanded')) {
            card.classList.remove('expanded');
            expandableContent.style.maxHeight = '0';
          }
        });
      }
    });
  });
</script>