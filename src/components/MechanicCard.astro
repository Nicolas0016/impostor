---
interface Props {
  mechanic: {
    id: string;
    name: string;
    description: string;
    details?: {
      mecanica?: string;
      objetivo?: string;
      porQueFunciona?: string;
      rol?: string;
      efecto?: string;
    };
    icon: string;
    color: string;
    difficulty: 'baja' | 'media' | 'alta';
  };
}

const { mechanic } = Astro.props;

// Configuración centralizada de colores (modo claro + oscuro)
