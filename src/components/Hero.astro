---
interface Props {
  title: string;
  tagline: string;
  description?: string;
}

const { title, tagline, description } = Astro.props;
import { CopyPath, Play } from './icons';
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-blue-900 via-purple-900 to-indigo-900 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900">
  <!-- Animated background -->
  <div class="absolute inset-0">
    <div class="absolute top-1/4 left-1/4 w-72 h-72 bg-purple-500 dark:bg-purple-900 rounded-full mix-blend-multiply filter blur-3xl opacity-20 dark:opacity-10 animate-pulse"></div>
    <div class="absolute bottom-1/4 right-1/4 w-72 h-72 bg-pink-500 dark:bg-pink-900 rounded-full mix-blend-multiply filter blur-3xl opacity-20 dark:opacity-10 animate-pulse animation-delay-2000"></div>
    <div class="absolute top-1/2 left-1/2 w-72 h-72 bg-blue-500 dark:bg-blue-900 rounded-full mix-blend-multiply filter blur-3xl opacity-20 dark:opacity-10 animate-pulse animation-delay-4000"></div>
  </div>
  
  <div class="relative z-10 container mx-auto px-4 py-16 text-center">
    <!-- Logo/Branding -->
    <div class="mb-8 animate-fade-in">
      <div class="flex justify-center mb-6">
        <div class="bg-white/10 dark:bg-gray-800/50 backdrop-blur-sm rounded-2xl p-4 shadow-xl">
          <span class="text-5xl">ðŸŽ®</span>
        </div>
      </div>
      
      <h1 class="text-5xl md:text-7xl font-bold mb-4 bg-gradient-to-r from-pink-400 via-purple-400 to-blue-400 dark:from-pink-300 dark:via-purple-300 dark:to-blue-300 bg-clip-text text-transparent">
        {title}
      </h1>
      
      <p class="text-2xl md:text-3xl text-white dark:text-gray-100 font-light mb-6 max-w-3xl mx-auto">
        {tagline}
      </p>
      
      {description && (
        <p class="text-lg text-blue-200 dark:text-gray-300 mb-8 max-w-2xl mx-auto">
          {description}
        </p>
      )}
    </div>
    
    <!-- CTA Buttons -->
    <div class="flex flex-col sm:flex-row gap-5 justify-center items-center animate-slide-up relative">
      <a 
        href="/jugar" 
        class="btn bg-white dark:bg-gray-800 text-purple-700 dark:text-purple-300 hover:bg-purple-50 dark:hover:bg-purple-900/30 px-8 py-4 text-lg font-bold shadow-xl dark:shadow-gray-900/50 transform hover:-translate-y-1 transition-all hover:shadow-2xl dark:hover:shadow-purple-900/30 border border-transparent hover:border-purple-300 dark:hover:border-purple-700"
      >
        <span class="flex items-center justify-center gap-2">
          <Play/> Empezar a jugar
        </span>
      </a>
      
      <a 
        href="#game-info" 
        class="btn bg-transparent border-2 border-white dark:border-gray-300 text-white dark:text-gray-100 hover:bg-white/10 dark:hover:bg-gray-800/50 px-8 py-4 text-lg font-bold transition-all hover:border-purple-400 dark:hover:border-purple-500"
      >
        <span class="flex items-center justify-center gap-2">
          <CopyPath /> Ver cÃ³mo se juega
        </span>
      </a>
    </div>
    
    <!-- Scroll indicator -->
    <div class="absolute bottom-1 left-1/2 transform -translate-x-1/2 animate-bounce">
      <a href="#game-info" class="text-white dark:text-gray-300 hover:text-purple-300 dark:hover:text-purple-400 transition-colors" aria-label="Desplazarse hacia abajo">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .animation-delay-2000 {
    animation-delay: 2s;
  }
  
  .animation-delay-4000 {
    animation-delay: 4s;
  }
  
  @keyframes pulseGlow {
    0%, 100% {
      box-shadow: 0 0 20px rgba(255, 255, 255, 0.3), 0 0 60px rgba(192, 132, 252, 0.3);
    }
    50% {
      box-shadow: 0 0 40px rgba(255, 255, 255, 0.5), 0 0 120px rgba(192, 132, 252, 0.5);
    }
  }
  
  @keyframes pulseGlowDark {
    0%, 100% {
      box-shadow: 0 0 20px rgba(139, 92, 246, 0.2), 0 0 60px rgba(192, 132, 252, 0.2);
    }
    50% {
      box-shadow: 0 0 40px rgba(139, 92, 246, 0.3), 0 0 120px rgba(192, 132, 252, 0.3);
    }
  }
  
  .animate-pulse-glow {
    animation: pulseGlow 2s infinite;
  }
  
  .dark .animate-pulse-glow {
    animation: pulseGlowDark 2s infinite;
  }
  
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-fade-in {
    animation: fadeIn 1s ease-out;
  }
  
  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-slide-up {
    animation: slideUp 0.8s ease-out 0.3s both;
  }
  
  /* Estilos para el enlace botÃ³n */
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.75rem 2rem;
    border-radius: 0.75rem;
    font-weight: 600;
    transition: all 0.3s ease;
    cursor: pointer;
    text-decoration: none;
    min-width: 200px;
  }
  
  /* Mejoras para modo oscuro */
  @media (prefers-color-scheme: dark) {
    .btn {
      transition: all 0.3s ease, box-shadow 0.3s ease;
    }
  }
  
  /* Ajustes para mÃ³viles */
  @media (max-width: 640px) {
    .btn {
      width: 100%;
      max-width: 300px;
    }
  }
</style>