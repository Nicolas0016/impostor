---
// src/components/FeatureCard.astro
interface Props {
  icon: string;
  title: string;
  description: string;
}

const { icon, title, description } = Astro.props;
---

<div class="feature-card">
  <div class="feature-icon">
    <i class={icon}></i>
  </div>
  <h3>{title}</h3>
  <p>{description}</p>
</div>