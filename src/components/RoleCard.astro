---
interface Props {
  role: {
    id: string;
    name: string;
    team: string;
    description: string;
    ability: string;
    icon: string;
    color: string;
    teamColor: string;
  };
}

const { role } = Astro.props;

// Configuración simplificada
const teamConfig: Record<string, { 
  badge: string; 
  border: string;
  gradient: string;
}> = {
  green: {
    badge: 'bg-green-100 text-green-800',
    border: 'border-green-200 hover:border-green-300',
    gradient: 'from-green-500 to-emerald-600'
  },
  red: {
    badge: 'bg-red-100 text-red-800',
    border: 'border-red-200 hover:border-red-300',
    gradient: 'from-red-500 to-rose-600'
  },
  blue: {
    badge: 'bg-blue-100 text-blue-800',
    border: 'border-blue-200 hover:border-blue-300',
    gradient: 'from-blue-500 to-sky-600'
  },
  purple: {
    badge: 'bg-purple-100 text-purple-800',
    border: 'border-purple-200 hover:border-purple-300',
    gradient: 'from-purple-500 to-violet-600'
  },
  pink: {
    badge: 'bg-pink-100 text-pink-800',
    border: 'border-pink-200 hover:border-pink-300',
    gradient: 'from-pink-500 to-rose-600'
  },
  orange: {
    badge: 'bg-orange-100 text-orange-800',
    border: 'border-orange-200 hover:border-orange-300',
    gradient: 'from-orange-500 to-amber-600'
  }
};

// Obtener configuración
const getTeamConfig = (color: string) => {
  return teamConfig[color] || teamConfig.green;
};

const teamCfg = getTeamConfig(role.teamColor);
const isCitizen = role.team === 'Ciudadanos';
---

<div class={`card border-2 ${teamCfg.border} transition-all duration-300 hover:shadow-xl hover:-translate-y-1 py-1 px-1.5 rounded-2xl`}>
  <div class="flex items-start gap-4">
    <!-- Icono -->
    <div class="flex-shrink-0">
      <div class={`w-14 h-14 rounded-xl bg-gradient-to-br ${teamCfg.gradient} flex items-center justify-center text-white shadow-md`}>
        <span class="text-2xl font-bold">{role.name.charAt(0)}</span>
      </div>
    </div>
    
    <!-- Contenido -->
    <div class="flex-1">
      <div class="flex justify-between items-start mb-2">
        <h3 class="text-xl font-bold text-gray-800">{role.name}</h3>
        <span class={`text-xs font-semibold px-2 py-1 rounded-full ${teamCfg.badge}`}>
          {role.team}
        </span>
      </div>
      
      <p class="text-gray-600 mb-3 text-sm">
        {role.description}
      </p>
      
      <div class="mt-4 pt-3 border-t border-gray-100">
        <span class="text-xs font-semibold text-gray-500 uppercase tracking-wide">Habilidad</span>
        <p class="text-sm text-gray-700 mt-1 font-medium">{role.ability}</p>
      </div>
    </div>
  </div>
</div>