---
type Difficulty = 'baja' | 'media' | 'alta';

interface Restriction {
  id: string;
  name: string;
  description: string;
  details?: string;
  icon: string;
  difficulty: Difficulty;
}

interface Props {
  restriction: Restriction;
}

const { restriction } = Astro.props;

const difficultyConfig: Record<Difficulty, {
  label: string;
  color: string;
  bgColor: string;
  bgColorDark: string;
  textColor: string;
  textColorDark: string;
  borderColor: string;
  borderColorDark: string;
  iconColor: string;
  iconColorDark: string;
  hoverColor: string;
  hoverColorDark: string;
  badgeBg: string;
  badgeBgDark: string;
  badgeText: string;
  badgeTextDark: string;
}> = {
  baja: {
    label: 'F√°cil',
    color: 'green',
    bgColor: 'bg-green-50',
    bgColorDark: 'dark:bg-green-950/30',
    textColor: 'text-green-800',
    textColorDark: 'dark:text-green-300',
    borderColor: 'border-green-200',
    borderColorDark: 'dark:border-green-900',
    iconColor: 'text-green-600',
    iconColorDark: 'dark:text-green-400',
    hoverColor: 'hover:border-green-300',
    hoverColorDark: 'dark:hover:border-green-700',
    badgeBg: 'bg-green-100',
    badgeBgDark: 'dark:bg-green-900/40',
    badgeText: 'text-green-700',
    badgeTextDark: 'dark:text-green-300'
  },
  media: {
    label: 'Media',
    color: 'yellow',
    bgColor: 'bg-yellow-50',
    bgColorDark: 'dark:bg-yellow-950/30',
    textColor: 'text-yellow-800',
    textColorDark: 'dark:text-yellow-300',
    borderColor: 'border-yellow-200',
    borderColorDark: 'dark:border-yellow-900',
    iconColor: 'text-yellow-600',
    iconColorDark: 'dark:text-yellow-400',
    hoverColor: 'hover:border-yellow-300',
    hoverColorDark: 'dark:hover:border-yellow-700',
    badgeBg: 'bg-yellow-100',
    badgeBgDark: 'dark:bg-yellow-900/40',
    badgeText: 'text-yellow-700',
    badgeTextDark: 'dark:text-yellow-300'
  },
  alta: {
    label: 'Dif√≠cil',
    color: 'red',
    bgColor: 'bg-red-50',
    bgColorDark: 'dark:bg-red-950/30',
    textColor: 'text-red-800',
    textColorDark: 'dark:text-red-300',
    borderColor: 'border-red-200',
    borderColorDark: 'dark:border-red-900',
    iconColor: 'text-red-600',
    iconColorDark: 'dark:text-red-400',
    hoverColor: 'hover:border-red-300',
    hoverColorDark: 'dark:hover:border-red-700',
    badgeBg: 'bg-red-100',
    badgeBgDark: 'dark:bg-red-900/40',
    badgeText: 'text-red-700',
    badgeTextDark: 'dark:text-red-300'
  }
};

const config = difficultyConfig[restriction.difficulty];

const getIcon = (iconName: string): string => {
  const icons: Record<string, string> = {
    'mic-off': 'M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z M5 19l14-14',
    'search': 'M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z',
    'type': 'M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z',
    'volume-x': 'M15.536 8.464a5 5 0 010 7.072M12 6l-3 4H4v4h5l3 4V6z M17 9l6 6m0-6l-6 6',
    'image': 'M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z',
    'lock': 'M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z',
    'clock': 'M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z',
    'eye': 'M15 12a3 3 0 11-6 0 3 3 0 016 0z M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943 and 9.542-7z',
    'zap': 'M13 10V3L4 14h7v7l9-11h-7z',
    'users': 'M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13 0a6 6 0 01-9-5.197'
  };
  
  return icons[iconName] || icons.lock;
};
---

<div 
  class={`
    card border-2 ${config.borderColor} ${config.borderColorDark}
    ${config.bgColor} ${config.bgColorDark}
    ${config.hoverColor} ${config.hoverColorDark}
    transition-all duration-300 group p-6 rounded-2xl
    backdrop-blur-sm hover:shadow-xl dark:hover:shadow-gray-900/50
    hover:-translate-y-1
  `}
  data-aos="fade-up"
>
  <!-- Encabezado con icono y t√≠tulo -->
  <div class="flex items-start justify-between mb-6">
    <div class="flex items-center gap-4">
      <!-- Icono con fondo sutil -->
      <div class={`
        relative w-14 h-14 rounded-xl ${config.bgColor} ${config.bgColorDark}
        flex items-center justify-center shadow-sm group-hover:shadow-md transition-shadow
        before:absolute before:inset-0 before:bg-gradient-to-br before:from-white/50 before:to-transparent
        dark:before:from-white/10 before:rounded-xl
      `}>
        <svg 
          class={`w-7 h-7 ${config.iconColor} ${config.iconColorDark} relative z-10`}
          fill="none" 
          stroke="currentColor" 
          viewBox="0 0 24 24"
        >
          <path 
            stroke-linecap="round" 
            stroke-linejoin="round" 
            stroke-width="2" 
            d={getIcon(restriction.icon)}
          />
        </svg>
      </div>
      
      <!-- T√≠tulo y dificultad -->
      <div class="flex-1">
        <h3 class="text-xl font-bold text-gray-800 dark:text-gray-100 group-hover:text-gray-900 dark:group-hover:text-white">
          {restriction.name}
        </h3>
        <div class="flex items-center gap-3 mt-2">
          <!-- Badge de dificultad -->
          <span class={`
            inline-block px-3 py-1.5 rounded-full text-xs font-semibold
            ${config.badgeBg} ${config.badgeBgDark}
            ${config.badgeText} ${config.badgeTextDark}
          `}>
            {config.label}
          </span>
          
          <!-- Indicador visual de dificultad -->
          <div class="flex items-center space-x-1">
            {Array.from({ length: 3 }).map((_, i) => {
              const isActive = i < (restriction.difficulty === 'baja' ? 1 : restriction.difficulty === 'media' ? 2 : 3);
              return (
                <div 
                  class={`w-2.5 h-2.5 rounded-full transition-all ${
                    isActive 
                      ? `bg-${config.color}-500 dark:bg-${config.color}-400 scale-100` 
                      : 'bg-gray-300 dark:bg-gray-600 scale-75'
                  }`}
                ></div>
              );
            })}
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Descripci√≥n principal -->
  <div class="mb-6">
    <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
      {restriction.description}
    </p>
  </div>
  
  <!-- Detalles adicionales -->
  {restriction.details && (
    <div class="mt-6 pt-6 border-t border-gray-200 dark:border-gray-700">
      <div class="flex items-start">
        <div class="flex-shrink-0 mt-1">
          <svg class={`w-5 h-5 ${config.iconColor} ${config.iconColorDark}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm text-gray-500 dark:text-gray-400 italic">
            {restriction.details}
          </p>
        </div>
      </div>
    </div>
  )}
  
  <!-- Ejemplo de aplicaci√≥n -->
  <div class="mt-8 pt-6 border-t border-gray-100 dark:border-gray-800">
    <div class="flex items-center justify-between mb-4">
      <span class="text-sm font-medium text-gray-700 dark:text-gray-300 flex items-center gap-2">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
        </svg>
        Ejemplo pr√°ctico
      </span>
      <div class="flex items-center space-x-2">
        {restriction.difficulty === 'baja' && (
          <span class="px-2 py-1 bg-green-100 dark:bg-green-900/40 text-green-700 dark:text-green-300 text-xs rounded">
            Ideal para principiantes
          </span>
        )}
        {restriction.difficulty === 'media' && (
          <span class="px-2 py-1 bg-yellow-100 dark:bg-yellow-900/40 text-yellow-700 dark:text-yellow-300 text-xs rounded">
            Para jugadores intermedios
          </span>
        )}
        {restriction.difficulty === 'alta' && (
          <span class="px-2 py-1 bg-red-100 dark:bg-red-900/40 text-red-700 dark:text-red-300 text-xs rounded">
            Desaf√≠o para expertos
          </span>
        )}
      </div>
    </div>
    
    <!-- Contenedor de ejemplo -->
    <div class={`
      bg-gradient-to-br from-white to-gray-50 dark:from-gray-800 dark:to-gray-900
      rounded-xl p-4 border ${config.borderColor} ${config.borderColorDark}
    `}>
      {restriction.id === 'mimo' && (
        <div class="flex items-center space-x-4">
          <div class={`
            w-10 h-10 rounded-full flex items-center justify-center
            ${config.bgColor.replace('50', '100')} ${config.bgColorDark.replace('950', '900')}
            flex-shrink-0
          `}>
            <span class={`text-lg ${config.iconColor} ${config.iconColorDark}`}>ü§ê</span>
          </div>
          <div class="flex-1">
            <p class="text-gray-700 dark:text-gray-300 text-sm">
              <span class="font-semibold">Jugador 1:</span> *hace gestos de comer sin poder hablar*
            </p>
            <div class="flex items-center gap-2 mt-1">
              <span class="text-xs px-2 py-0.5 bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-300 rounded">Permitido</span>
              <span class="text-xs px-2 py-0.5 bg-red-100 dark:bg-red-900/30 text-red-700 dark:text-red-300 rounded">No palabras</span>
            </div>
          </div>
        </div>
      )}
      
      {restriction.id === 'interrogatorio' && (
        <div class="space-y-3">
          <div class="flex items-start space-x-3">
            <div class={`
              w-8 h-8 rounded-full flex items-center justify-center flex-shrink-0 mt-1
              bg-purple-100 dark:bg-purple-900/30
            `}>
              <span class="text-xs text-purple-600 dark:text-purple-400 font-bold">D</span>
            </div>
            <div class="flex-1">
              <p class="text-gray-700 dark:text-gray-300 text-sm">
                <span class="font-semibold">Detective:</span> "¬øTu palabra es un animal?"
              </p>
              <p class="text-gray-500 dark:text-gray-400 text-xs mt-1">
                Solo preguntas directas permitidas
              </p>
            </div>
          </div>
        </div>
      )}
      
      {restriction.id === 'sin-repetir-letra' && (
        <div class="space-y-3">
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-3">
              <div class="w-8 h-8 bg-green-100 dark:bg-green-900/30 rounded-full flex items-center justify-center">
                <span class="text-sm text-green-600 dark:text-green-400 font-bold">A</span>
              </div>
              <span class="text-gray-700 dark:text-gray-300 text-sm font-medium">"Manzana"</span>
            </div>
            <span class="text-xs px-2 py-1 bg-green-100 dark:bg-green-900/40 text-green-700 dark:text-green-300 rounded">‚úÖ</span>
          </div>
          
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-3">
              <div class="w-8 h-8 bg-red-100 dark:bg-red-900/30 rounded-full flex items-center justify-center">
                <span class="text-sm text-red-600 dark:text-red-400 font-bold">B</span>
              </div>
              <span class="text-gray-700 dark:text-gray-300 text-sm font-medium">"Melocot√≥n"</span>
            </div>
            <span class="text-xs px-2 py-1 bg-red-100 dark:bg-red-900/40 text-red-700 dark:text-red-300 rounded">‚ùå Letra "M" repetida</span>
          </div>
        </div>
      )}
      
      {restriction.id === 'una-silaba' && (
        <div class="flex items-center space-x-4">
          <div class="flex flex-col items-center space-y-2">
            <div class={`
              w-12 h-12 rounded-full flex items-center justify-center
              ${config.bgColor.replace('50', '100')} ${config.bgColorDark.replace('950', '900')}
            `}>
              <span class={`text-xl ${config.iconColor} ${config.iconColorDark}`}>üî§</span>
            </div>
          </div>
          <div class="flex-1 grid grid-cols-2 gap-2">
            <div class="text-center p-2 bg-green-50 dark:bg-green-900/20 rounded-lg">
              <span class="text-lg font-bold text-green-600 dark:text-green-400">"Sol"</span>
              <div class="text-xs text-green-500 dark:text-green-300 mt-1">‚úÖ 1 s√≠laba</div>
            </div>
            <div class="text-center p-2 bg-red-50 dark:bg-red-900/20 rounded-lg">
              <span class="text-lg font-bold text-red-600 dark:text-red-400">"Elefante"</span>
              <div class="text-xs text-red-500 dark:text-red-300 mt-1">‚ùå 4 s√≠labas</div>
            </div>
          </div>
        </div>
      )}
      
      {restriction.id === 'pista-visual' && (
        <div class="flex items-center space-x-4">
          <div class={`
            w-12 h-12 rounded-xl flex items-center justify-center
            bg-gradient-to-br from-blue-100 to-indigo-100 
            dark:from-blue-900/30 dark:to-indigo-900/30
          `}>
            <span class="text-2xl">üñºÔ∏è</span>
          </div>
          <div class="flex-1">
            <p class="text-gray-700 dark:text-gray-300 text-sm">
              <span class="font-semibold">Pista visual:</span> Imagen borrosa mostrada a todos
            </p>
            <p class="text-gray-500 dark:text-gray-400 text-xs mt-1">
              Sin descripciones verbales permitidas
            </p>
          </div>
        </div>
      )}
    </div>
  </div>
</div>

<style>
  [data-aos] {
    opacity: 0;
    transition-property: opacity, transform;
    transition-duration: 0.6s;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  [data-aos="fade-up"] {
    transform: translateY(20px);
  }
  
  [data-aos].aos-animate {
    opacity: 1;
    transform: translateY(0);
  }
  
  .card {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .card:hover {
    transform: translateY(-4px);
  }
</style>